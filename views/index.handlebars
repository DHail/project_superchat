<nav id="sidebar-wrapper">
  <div id="create-room">+ Create Room</div>
  <ul id="room-list">
    {{#each rooms as |room|}}
      <li class="room" room-name="{{room.roomName}}">
        <div class="room-name" room-name="{{room.roomName}}">{{room.roomName}}</div>
        <div class="members" room-name="{{room.roomName}}">{{room.authorCount}} members</div>
      </li>
    {{/each}}
  </ul>
</nav>

<div id="page-content-wrapper">
  <div id="new-room" class="col">
    <form id="new-room-form">
      <input type="text" name="name" placeholder="Room name">
    </form>
  </div>

  <div id="current-room" class="col">
  </div>

  <div id="new-message">
    <form id="new-message-form">
      <input type="text" name="text" placeholder="Post message...">
    </form>
  </div>

</div>
